<html>
    <head>
        <title>
            Disabling element.
        </title>
    </head>
    <body>
        
        <script>
            function abc(){
                document.forms.myform.name.disabled=false;
            }

            function xyz(){
                document.forms.myform.name.disabled=true;
            }


        </script>
        <form name="myform">
            Enter Name : <input type="text" name="name" size=30>
            <input type="button" name="Enable" value="Enable" onclick="abc()">
            <input type="button" name="Disable" value="Disable" onclick="xyz()">
        </form>
    </body>
</html>
